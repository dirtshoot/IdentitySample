@model IdentitySample.Models.ForgotPasswordEmail

Content-Type: text/plain; charset=utf8

<p style="font-family:Arial, Helvetica, sans-serif;font-size:24px;margin-top:6px;margin-bottom:30px;font-weight:bold;">BidAmi.com Password Reset</p>
<p style="font-family:Arial, Helvetica, sans-serif;font-size:16px;margin-top:6px;margin-bottom:20px;">Greetings @Model.UserName</p>
<p style="font-family:Arial, Helvetica, sans-serif;font-size:16px;margin-top:6px;margin-bottom:10px;">You have made a requested to reset your <a href="@Url.Action("Index", "Home", null, protocol: Request.Url.Scheme)">BidAmi.com</a> password.<br />Please click the password reset link below to set your login password.</p>
<p style="font-family:Arial, Helvetica, sans-serif;font-size:16px;margin-top:6px;margin-bottom:10px;"><a href="@Url.Action("ConfirmEmail", "Account", new { userId = Model.Id, code = Model.Code }, protocol: Request.Url.Scheme)">Reset Your Password</a></p>
<p style="font-family:Arial, Helvetica, sans-serif;font-size:12px;margin-top:6px;margin-bottom:20px;">@Url.Action("ConfirmEmail", "Account", new { userId = Model.Id, code = Model.Code }, protocol: Request.Url.Scheme)</p>
